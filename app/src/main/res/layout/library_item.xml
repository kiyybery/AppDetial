<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <FrameLayout
        android:id="@+id/parent_interview_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_library_cover"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@null"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/linyout_library_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/discover_interview_cover"
            android:orientation="horizontal"
            android:visibility="invisible">

            <com.xyn.appdetial.widget.HandyTextView
                android:id="@+id/topicGuideTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="免费"
                android:textColor="@color/white" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_library_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="20"
            android:singleLine="true"
            android:textColor="#262626" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_views" />

            <TextView
                android:id="@+id/tv_library_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/comment_icon" />

            <TextView
                android:id="@+id/tv_library_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人在学" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/like_drawable" />

            <TextView
                android:id="@+id/tv_library_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_add_collections"
        style="?android:imageButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/collect_drawable" />

</LinearLayout>
