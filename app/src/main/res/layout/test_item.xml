<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:layout_marginLeft="34px"
        android:background="#fff">

        <ImageView
            android:id="@+id/img_test"
            android:layout_width="240px"
            android:layout_height="180px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focus_show" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="45px"
            android:layout_toRightOf="@+id/img_test">

            <com.xyn.appdetial.util.CustomLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="410px"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:singleLine="false"
                    android:text="123132131231231321312312313213123"
                    android:textColor="#333333"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/tag_iv"
                    android:layout_width="50px"
                    android:layout_height="25px"
                    android:src="@drawable/ceshi_zuire_icon" />

            </com.xyn.appdetial.util.CustomLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_test"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_marginBottom="15px">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已答题人数："
                android:textColor="#969696"
                android:textSize="26px" />

            <TextView
                android:id="@+id/answer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/time_tv"
                android:layout_toEndOf="@+id/time_tv"
                android:layout_toRightOf="@+id/time_tv"
                android:text="4452"
                android:textSize="26px" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>